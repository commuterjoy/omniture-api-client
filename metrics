
require 'lib/omniture'
require 'date'

# ------

yesterday = (Date.today-1).strftime('%Y-%m-%d') 

opts = {
         :date => yesterday,
         :metrics => ['pageViews', 'visits', 'visitors']
       }

report = Report.new().queueQueueOvertime(opts)

response = `#{report}`

puts response 

report_id = JSON.parse(response)['reportID']

